@page
@model SportClub.Pages.Players.SortedByNameModel

@{
    ViewData["Title"] = "Sortiranje";
}

<h1>Sortiranje po imenu igraca</h1>

<form method="GET">
    <div class="form-group">
        <label>Sortiranje:</label>
        <select name="sortOrder" class="form-control" onchange="this.form.submit()">
            <option value="asc" selected="@(Model.SortOrder=="asc")">A > Z</option>
            <option value="desc" selected="@(Model.SortOrder=="desc")">Z > A</option>
        </select>
    </div>
</form>

<hr />

<table class ="table">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum rodenja</th>
            <th>Tim</th>
            <th>Broj dresa</th>
            <th>Pozicija</th>
            <th>Aktivan</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var player in Model.Players) {
        <tr>
            <td>@player.FirstName</td>
            <td>@player.LastName</td>
            <td>@player.DateOfBirth.ToShortDateString()</td>
            <td>@player.Team?.Name</td>
            <td>@player.JerseyNumber</td>
            <td>@player.Position</td>
            <td>@player.Active</td>
        </tr>
    }
    </tbody>
</table>