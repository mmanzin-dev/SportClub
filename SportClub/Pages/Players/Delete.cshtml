@page
@model SportClub.Pages.Players.DeleteModel

@{
    ViewData["Title"] = "Izbrisi";
}

<h1>Brisanje</h1>

<div>
    <h4>Igrac</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.FirstName)
        </dd>
        <dt class="col-sm-2">
            Prezime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.LastName)
        </dd>
        <dt class="col-sm-2">
            Datum rodenja
        </dt>
        <dd class="col-sm-10">
            @Model.Player.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Email)
        </dd>
        <dt class="col-sm-2">
            Broj mobitela
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Broj dresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.JerseyNumber)
        </dd>
        <dt class="col-sm-2">
            Pozicija
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Position)
        </dd>
        <dt class="col-sm-2">
            Aktivan
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Active)
        </dd>
        <dt class="col-sm-2">
            Tim
        </dt>
        <dd class="col-sm-10">
            @(Model.Player.Team?.Name ?? "Nema")
        </dd>
    </dl>
    
    <form method="post" onsubmit="return confirmDelete('@Model.Player.FirstName @Model.Player.LastName')">
        <input type="hidden" asp-for="Player.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Nazad na tablicu</a>
    </form>
</div>
