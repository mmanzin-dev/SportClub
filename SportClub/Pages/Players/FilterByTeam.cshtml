@page
@model SportClub.Pages.Players.FilterByTeamModel

@{
    ViewData["Title"] = "Filtriranje";
}

<h1>Filtriranje po timu</h1>

<form method="GET">
    <div class="form-group">
        <label>Odaberite tim:</label>
        <select name="teamId" class="form-control" onchange="this.form.submit()">
            <option value="">Svi timovi</option>
            @foreach (var team in Model.Teams) {
                <option value="@team.Id" selected="@(team.Id == Model.SelectedTeamId)">@team.Name</option>
            }
        </select>
    </div>
</form>

<hr/>

<table class="table">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum rodenja</th>
            <th>Tim</th>
            <th>Broj dresa</th>
            <th>Pozicija</th>
            <th>Aktivan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players) {
            <tr>
                <td>@player.FirstName</td>
                <td>@player.LastName</td>
                <td>@player.DateOfBirth.ToShortDateString()</td>
                <td>@player.Team?.Name</td>
                <td>@player.JerseyNumber</td>
                <td>@player.Position</td>
                <td>@player.Active</td>
            </tr>
        }
    </tbody>
</table>
