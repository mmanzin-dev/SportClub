@page
@model SportClub.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Detalji";
}

<h1>Detalji</h1>

<div>
    <h4>Tim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class="col-sm-2">
            Trener
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Coach)
        </dd>
        <dt class="col-sm-2">
            Broj igraca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.NumberOfPlayers)
        </dd>
        <dt class="col-sm-2">
            Godina osnivanja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.YearFounded)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.Id">Uredi</a> |
    <a asp-page="./Index">Nazad na listu</a>
</div>
