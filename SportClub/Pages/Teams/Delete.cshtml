@page
@model SportClub.Pages.Teams.DeleteModel

@{
    ViewData["Title"] = "Izbrisi";
}

<h1>Brisanje</h1>

<div>
    <h4>Tim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class="col-sm-2">
            Trener
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Coach)
        </dd>
        <dt class="col-sm-2">
            Broj igraca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.NumberOfPlayers)
        </dd>
        <dt class="col-sm-2">
            Godina osnivanja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.YearFounded)
        </dd>
    </dl>
    
    <form method="post" onsubmit="return confirmDelete('@Model.Team.Name')">
        <input type="hidden" asp-for="Team.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Nazad na listu</a>
    </form>
</div>
