@model IEnumerable<SportClubMVC.Models.Player>

@{
    ViewData["Title"] = "Pretraga po poziciji";
}

<h1>Pretraga po poziciji</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="position" class="form-control" placeholder="LW, ST, RW.." value="@ViewBag.Position" />
                <button type="submit" class="btn btn-primary">Pretrazi</button>
            </div>
        </div>
    </div>
</form>

<hr />

@if (!string.IsNullOrEmpty(ViewBag.Position))
{
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Tim</th>
                    <th>Pozicija</th>
                    <th>Aktivan</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model)
                {
                    <tr>
                        <td>@player.FirstName</td>
                        <td>@player.LastName</td>
                        <td>@player.Team?.Name</td>
                        <td>@player.Position</td>
                        <td>@player.Active</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@player.Id">Detalji</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            <p>Nema igraca na poziciji "@ViewBag.Position"</p>
        </div>
    }
}
else
{
    <p>Unesite poziciju za pretragu igraca</p>
}