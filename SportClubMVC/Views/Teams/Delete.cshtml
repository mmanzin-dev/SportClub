@model SportClubMVC.Models.Team

@{
    ViewData["Title"] = "Izbrisi";
}

<h1>Izbrisi</h1>

<div>
    <h4>Tim</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ime
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Trener
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coach)
        </dd>
        <dt class = "col-sm-2">
            Broj igraca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPlayers)
        </dd>
        <dt class = "col-sm-2">
            Godina osnivanja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearFounded)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbrisi" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na tablicu</a>
    </form>
</div>
